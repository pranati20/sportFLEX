    <div class="slanted-container">
      <div class="scTitle">
        <span class="red-text">Play</span>,
        <span class="white-text"> your way to </span>
        <span class="red-text">VICTORY</span>
      </div>

      <div class="container">
        <div class="box1">
          <div class="boxContainer">
            <h1>DISCOVER</h1>
            <p>a sport</p>

            <div class="searchBox">
              <input
                class="searchInput"
                type="text"
                name=""
                placeholder="Search for cities, places,etc..."
              />
              <button class="searchButton" href="#">
                <img
                  src="../images/magnifying-glass-solid.svg"
                  alt="Search"
                  style="width: 20px; height: 30px"
                />
              </button>
            </div>
            <h3>Explore popular sports</h3>
            <div class="DiscoverBtns">
              <button id="hydBtn" class="btn-8"><span>Cricket</span></button>
              <button id="chennaiBtn" class="btn-8">
                <span>Basketball</span>
              </button>
              <button id="delBtn" class="btn-8"><span>Football</span></button>
              <button id="bgBtn" class="btn-8"><span>Kabaddi</span></button>
              <button id="mumbaiBtn" class="btn-8"><span>Hockey</span></button>
            </div>
          </div>
        </div>
        <div class="box2">
          <div class="boxContainer">
            <h1>TEAM UP</h1>
            <p>with friends</p>
            <h2 class="ID">Enter an ID</h2>
            <div class="wrapper">
              <label class="TeamWrapperLabel">
                <input />
              </label>
            </div>
            <div class="box2Btns">
              <button id="cancel" class="btn-8"><span>Cancel</span></button>
              <button id="add" class="btn-8"><span>Add Friend</span></button>
            </div>
          </div>
        </div>
        <div class="box3">
          <div class="boxContainer">
            <h1>BOOK</h1>
            <p>your match</p>
            <div class="searchBox">
              <input
                class="searchInput"
                type="text"
                name=""
                placeholder="Search for cities, places,etc..."
              />
              <button class="searchButton" href="#">
                <img
                  src="../images/magnifying-glass-solid.svg"
                  alt="Search"
                  style="width: 20px; height: 30px"
                />
              </button>
            </div>
            <h3>Explore popular Venues</h3>

            <div class="BookBtns">
              <button id="hydBtn" class="btn-8"><span>Hyderabad</span></button>
              <button id="chennaiBtn" class="btn-8">
                <span>Chennai</span>
              </button>
              <button id="delBtn" class="btn-8"><span>Mumbai</span></button>
              <button id="bgBtn" class="btn-8"><span>Delhi</span></button>
              <button id="mumbaiBtn" class="btn-8">
                <span>Banglore</span>
              </button>
            </div>
          </div>
        </div>
      </div>
      <div class="page3">
        <div class="blackbg">
          <div class="MTLL">
            <div class="MTLLH1">
              <h1>MEET THE <span>LEADERBOARD</span></h1>
              <h1>LEGENDS</h1>
              <h3>
                Celebrate<span> victories </span>and<span> track </span
                ><br />your <span>progress</span> in the<span> game!</span>
              </h3>
            </div>
          </div>
          <div class="blackbgImg">
            <img src="../images/leaderboad-phone.png" alt="leaderboad image" />
          </div>
        </div>
      </div>
